<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.palmcity.QiDetailActivity" >

    <RelativeLayout
        android:id="@+id/ly1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/z_main_banner_bg" >

        <ImageButton
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dip"
            android:background="@null"
            android:src="@drawable/bt_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户资料"
            android:gravity="center"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:textColor="@color/White"
            android:textSize="20dp" />
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ly1"
        android:layout_above="@+id/ly2">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/imageview"
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:scaleType="fitCenter"/>
            <Button 
                android:id="@+id/product"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:text="最新产品"/>
            <LinearLayout 
                android:id="@+id/product_ly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
            <Button 
                android:id="@+id/about"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:text="关于我们"/>
            <LinearLayout 
                android:id="@+id/about_ly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
            <Button 
                android:id="@+id/contact"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:text="联系我们"/>
            <LinearLayout 
                android:id="@+id/contact_ly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
            <Button 
                android:id="@+id/concern"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:text="关注我们"/>
            <LinearLayout 
                android:id="@+id/concern_ly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout 
        android:id="@+id/ly2"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dip">
        <Button 
            android:id="@+id/bt_collect"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:text="收藏"/>
        <Button 
            android:id="@+id/bt_like"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_centerInParent="true"
            android:text="点赞"/>
        <Button 
            android:id="@+id/bt_share"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:text="分享"/>
    </RelativeLayout>
</RelativeLayout>
