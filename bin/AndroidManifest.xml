            android:name=".MeiListActivity"
            android:label="@string/title_activity_mei_list" >
        </activity>
        <activity
            android:name=".MeiDetailActivity"
            android:label="@string/title_activity_mei_detail" >
        </activity>
        <activity
            android:name=".AccountSettingActivity"
            android:label="@string/title_activity_account_setting" >
        </activity>
        <activity
            android:name=".DistributionAgreementActivity"
            android:label="@string/title_activity_distribution_agreement" >
